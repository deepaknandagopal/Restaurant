<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/orderedItem_textView"
        android:textSize="16sp"
        tools:text="OrderedItem"
        android:layout_alignBaseline="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/quantity_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4222"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@+id/orderedItem_textView"
        android:layout_alignBottom="@+id/orderedItem_textView"
        android:layout_toRightOf="@+id/orderedItem_textView"
        android:layout_toEndOf="@+id/orderedItem_textView"
        android:layout_marginStart="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_textview"
        android:textSize="16sp"
        android:gravity="center"
        tools:text="Price"
        android:layout_alignBaseline="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textSize="7dp"
        android:text="+"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_alignBottom="@+id/cancel" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="x"
        android:textSize="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>